{
  // =============================================================================
  // ‚ö†Ô∏è  USER CONFIGURATION REQUIRED - MODIFY THESE PATHS FOR YOUR SETUP  ‚ö†Ô∏è
  // =============================================================================
  "mounts": [
    // üìÅ UPDATE THIS PATH
    "source=<PROJECT_DIRECTORY>,target=/mnt/project,type=bind",
    // üìÅ UPDATE THIS PATH
    "source=<DOCUMENT_BUILT_DIRECTORY>,target=/mnt/_build,type=bind"
  ],
  // üìÅ UPDATE THIS PATH
  "workspaceFolder": "<PROJECT_DOCUMENTATION_DIRECTORY>",  


  // =============================================================================
  // Bico RST Documentation Development Container Configuration
  // =============================================================================

  // Container identification
  "name": "Bico rst Docker",
  
  // Build configuration
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {}
  },
  
  // Container runtime configuration
  "runArgs": [
    "--name", "bico-rst-container"
  ],
    
  // Container environment variables
  "containerEnv": {
    "DOCUTILSCONFIG": ""
  },
  
  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "swyddfa.esbonio",
        "lextudio.restructuredtext-pack",
        "jebbs.plantuml",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python",
        "esbonio.server.pythonPath": "/usr/bin/python",
        "esbonio.sphinx.confDir": "",
        "esbonio.sphinx.buildDir": "/mnt/_build"
      }
    }
  }
}
