{
  // =============================================================================
  // Bico RST Documentation Development Container Configuration
  // =============================================================================
  
  // Container identification
  "name": "Bico rst Docker",
  
  // Build configuration
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {}
  },
  
  // Container runtime configuration
  "runArgs": [
    "--name", "bico-rst-container"
  ],
  
  // =============================================================================
  // ‚ö†Ô∏è  USER CONFIGURATION REQUIRED - MODIFY THESE PATHS FOR YOUR SETUP  ‚ö†Ô∏è
  // =============================================================================
  // These paths must be updated to match your local directory structure:
  // - sphinx_test: Your documentation source directory
  // - doc_build: Your documentation build output directory
  // =============================================================================
  
  // Volume configuration
  "mounts": [
    // üìÅ UPDATE THIS PATH: Replace with your local project source directory
    "source=C:\\Users\\bico\\Desktop\\sphinx_test,target=/mnt/project,type=bind",
    // üìÅ UPDATE THIS PATH: Replace with your local documentation build directory  
    "source=C:\\Users\\bico\\Desktop\\doc_build,target=/mnt/_build,type=bind"
  ],
  // Documentation Workspace 
  //  /mnt/project is the mounted source directory
  //  /docs is the working directory for the documentation
  // üìÅ UPDATE the documentation working directory 
  "workspaceFolder": "/mnt/project/docs",
  
  // Initialization commands
  "postCreateCommand": "mkdir -p /mnt/project && mkdir -p /mnt/_build",
  
  // VS Code customizations
  "customizations": {
    "vscode": {
      // Essential extensions for RST documentation development
      "extensions": [
        "swyddfa.esbonio",
        "lextudio.restructuredtext-pack",
        "jebbs.plantuml"
      ],
      
      // Development environment settings
      "settings": {
        // Python configuration
        "python.defaultInterpreterPath": "/usr/bin/python",
        
        // Esbonio (Sphinx language server) configuration
        "esbonio.server.pythonPath": "/usr/bin/python",
        "esbonio.sphinx.confDir": "",
        "esbonio.sphinx.buildDir": "/mnt/_build"
      }
    }
  }
}
